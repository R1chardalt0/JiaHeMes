<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:DeviceManage.Converters;assembly=DeviceManage">

    <!-- 布尔值反转转换器 -->
    <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    
    <!-- 布尔值取反转换器 -->
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    
    <!-- 空值转换器 -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <!-- TagDetailDataArray 显示转换器 -->
    <converters:TagDetailsConverter x:Key="TagDetailsConverter"/>

    <!-- 用户管理相关转换器 -->
    <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
    <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
    <converters:BooleanToIndexConverter x:Key="BooleanToIndexConverter"/>
    <converters:SearchStatusToIndexConverter x:Key="SearchStatusToIndexConverter"/>

</ResourceDictionary>

