<UserControl x:Class="DeviceManage.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:conv="clr-namespace:DeviceManage.Converters"
             xmlns:models="clr-namespace:DeviceManage.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <conv:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
            <conv:BooleanToIndexConverter x:Key="BooleanToIndexConverter"/>
            <conv:SearchStatusToIndexConverter x:Key="SearchStatusToIndexConverter"/>
            <conv:SearchRoleToIndexConverter x:Key="SearchRoleToIndexConverter"/>
            <conv:UserRoleConverter x:Key="UserRoleConverter"/>
            <conv:UserRoleDisplayConverter x:Key="UserRoleDisplayConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮区域 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="刷新" 
                    Command="{Binding LoadUsersCommand}"                
                    Margin="0,0,15,0"
                    Style="{StaticResource ButtonDashedInfo}"/>
            <Button Content="新增" 
                    Command="{Binding AddUserCommand}"
                    Margin="0,0,15,0"
                    Style="{StaticResource ButtonDashedSuccess}"/>
        </StackPanel>

        <!-- 搜索区域 -->
        <Border Grid.Row="1" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,0,0,10"
                Background="#F9F9F9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <Label Content="用户名:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchUsername.Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                    <Label Content="真实姓名:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchRealName.Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                    <Label Content="角色:" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox Height="30" 
                              SelectedIndex="{Binding SearchRole.Value, Converter={StaticResource SearchRoleToIndexConverter}, Mode=TwoWay}">
                        <ComboBoxItem Content="全部"/>
                        <ComboBoxItem Content="管理员"/>
                        <ComboBoxItem Content="工艺工程师"/>
                        <ComboBoxItem Content="设备管理工程师"/>
                        <ComboBoxItem Content="班长"/>
                        <ComboBoxItem Content="操作员"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,10,10">
                    <Label Content="状态:" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox Height="30" 
                              SelectedIndex="{Binding SearchIsEnabled.Value, Converter={StaticResource SearchStatusToIndexConverter}}">
                        <ComboBoxItem Content="全部"/>
                        <ComboBoxItem Content="启用"/>
                        <ComboBoxItem Content="禁用"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,10">
                    <Button Content="搜索" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ButtonDashedInfo}"
                            Margin="0,0,10,0"
                            Height="30"
                            Padding="15,0"/>
                    <Button Content="重置" 
                            Command="{Binding ResetSearchCommand}"
                            Style="{StaticResource ButtonDashedWarning}"
                            Height="30"
                            Padding="15,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 数据表格区域 -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Users.Value}"
                  SelectedItem="{Binding SelectedUser.Value, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="5,3" 
                                        BorderThickness="0"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Setter Property="Foreground" Value="#1976D2"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="60"/>
                <DataGridTextColumn Header="用户名" 
                                    Binding="{Binding Username}" 
                                    Width="*"/>
                <DataGridTextColumn Header="真实姓名" 
                                    Binding="{Binding RealName}" 
                                    Width="*"/>
                <DataGridTemplateColumn Header="角色" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Role, Converter={StaticResource UserRoleConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="邮箱" 
                                    Binding="{Binding Email}" 
                                    Width="*"/>
                <DataGridTextColumn Header="手机号" 
                                    Binding="{Binding Phone}" 
                                    Width="120"/>
                <DataGridTemplateColumn Header="状态" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToTextConverter}, ConverterParameter='启用|禁用'}"
                                       Foreground="{Binding IsEnabled, Converter={StaticResource BooleanToColorConverter}}"
                                       FontWeight="Bold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="最后登录" 
                                    Binding="{Binding LastLoginAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                    Width="150"/>
                <DataGridTextColumn Header="创建时间" 
                                    Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                    Width="150"/>
                <DataGridTemplateColumn Header="操作" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="编辑"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource ButtonDashedSuccess}"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="删除"
                                        Style="{StaticResource ButtonDashedDanger}"
                                        Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分页控件 -->
        <Border Grid.Row="3" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0" 
                Padding="10,10,10,10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           VerticalAlignment="Center"
                           Text="{Binding TotalCount.Value, StringFormat='共 {0} 条记录'}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="上一页" 
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage.Value}"
                            Style="{StaticResource ButtonDashedInfo}"
                            Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Text="{Binding CurrentPage.Value, StringFormat='第 {0} 页'}"/>
                    <TextBlock VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Text="{Binding TotalPages.Value, StringFormat='共 {0} 页'}"/>
                    <Button Content="下一页" 
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage.Value}"
                            Style="{StaticResource ButtonDashedInfo}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 弹出框：用于新增 / 编辑用户 -->
        <Border Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsDialogOpen.Value, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="700"
                    Background="White"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 标题 -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock FontSize="16" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="新增用户"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing.Value}" Value="True">
                                            <Setter Property="Text" Value="编辑用户"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- 表单内容 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="500">
                        <Grid Margin="0,10,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                <Label Content="用户名:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EditingUser.Value.Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                         Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                <Label Content="真实姓名:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EditingUser.Value.RealName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                         Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                <Label Content="密码:" FontSize="12" Margin="0,0,0,5"/>
                                <PasswordBox x:Name="PasswordBox" 
                                             Height="30"
                                             PasswordChanged="PasswordBox_PasswordChanged"/>
                                <TextBlock Text="编辑时留空则不修改密码" 
                                           FontSize="10" 
                                           Foreground="Gray" 
                                           Margin="0,2,0,0"
                                           Visibility="{Binding IsEditing.Value, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                                <Label Content="角色:" FontSize="12" Margin="0,0,0,5"/>
                                <ComboBox Height="30" 
                                          ItemsSource="{Binding AvailableRoles}"
                                          SelectedItem="{Binding EditingUser.Value.Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource UserRoleConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                                <Label Content="邮箱:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EditingUser.Value.Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                         Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                                <Label Content="手机号:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EditingUser.Value.Phone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                         Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,10">
                                <Label Content="是否启用:" FontSize="12" Margin="0,0,0,5"/>
                                <CheckBox IsChecked="{Binding EditingUser.Value.IsEnabled, Mode=TwoWay}" 
                                          Content="启用"
                                          VerticalAlignment="Center"
                                          Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                <Label Content="备注:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EditingUser.Value.Remarks, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                         Height="60"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <!-- 按钮 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="取消"
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource ButtonDanger}"
                                Margin="0,0,10,0"/>
                        <Button Content="保存"
                                Command="{Binding UpdateUserCommand}"
                                Style="{StaticResource ButtonInfo}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>

