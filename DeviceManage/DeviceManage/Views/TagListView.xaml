<UserControl x:Class="DeviceManage.Views.TagListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceManage.Views"
             xmlns:models="clr-namespace:DeviceManage.Models"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="配方标签列表" FontSize="16" FontWeight="Bold" Margin="5" HorizontalAlignment="Left"/>
            <Button Grid.Column="1" Content="关闭" 
                    Command="{Binding CloseTagsListCommand}" 
                    Style="{StaticResource ButtonDashedDanger}" 
                    Margin="5" Padding="10,2"/>
        </Grid>

        <TextBlock Grid.Row="1" Text="{Binding TagsCountText.Value}" Margin="5,0,5,5" HorizontalAlignment="Left" Foreground="Gray" FontStyle="Italic"/>

        <Grid Grid.Row="2">
            <DataGrid x:Name="TagDataGrid" 
                      ItemsSource="{Binding RecipeTags.Value}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      IsReadOnly="True"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="PLC点位名称" Binding="{Binding PlcTagName}" Width="*"/>
                    <DataGridTextColumn Header="PLC名称" Binding="{Binding PlcDevice.PLCName}" Width="*"/>
                    <DataGridTextColumn Header="IP地址" Binding="{Binding PlcDevice.IPAddress}" Width="*"/>
                    <DataGridTextColumn Header="配方名称" Binding="{Binding Recipe.RecipeName}" Width="120"/>
                    <DataGridTextColumn Header="描述" Binding="{Binding Remarks}" Width="120"/>
                    <DataGridTemplateColumn  Header="操作" Width="120" >
                        <DataGridTemplateColumn.CellTemplate >
                            <DataTemplate>
                                <Button Content="切换配方" 
                                        Style="{StaticResource ButtonDanger}" 
                                        Margin="2"
                                        Command="{Binding DataContext.ToggleTagCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="一键切换配方" 
                    Style="{StaticResource ButtonDanger}" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="10"
                    Command="{Binding BatchToggleCommand}" 
                    Width="100" Height="30"/>
        </Grid>
    </Grid>
</UserControl>