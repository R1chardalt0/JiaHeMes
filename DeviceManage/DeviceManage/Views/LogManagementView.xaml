<UserControl x:Class="DeviceManage.Views.LogManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"

             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="刷新" Command="{Binding LoadCommand}" Style="{StaticResource ButtonDashedInfo}" />
        </StackPanel>

        <!-- 搜索区域 -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="模块:" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SearchModule.Value, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                <Label Content="用户名:" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SearchUsername.Value, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                <Label Content="操作类型:" FontSize="12" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding OperationTypeOptions}" 
                          DisplayMemberPath="Display" SelectedValuePath="Value"
                          SelectedValue="{Binding SearchOperationType.Value, Mode=TwoWay}"
                          Height="30" />
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Content="搜索" Command="{Binding SearchCommand}" Style="{StaticResource ButtonInfo}" Height="30" Padding="20,0" Margin="0,0,10,0"/>
                <Button Content="重置" Command="{Binding ResetCommand}" Style="{StaticResource ButtonWarning}" Height="30" Padding="20,0"/>
            </StackPanel>
        </Grid>

        <!-- 数据表格 -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Logs.Value}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="时间" Binding="{Binding CreatedAt}" Width="150"/>
                <DataGridTextColumn Header="用户" Binding="{Binding Username}" Width="100"/>
                <DataGridTextColumn Header="模块" Binding="{Binding Module}" Width="150"/>
                <DataGridTextColumn Header="操作类型" Binding="{Binding OperationTypeDisplay}" Width="100"/>
                <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分页控件（样式与用户管理统一） -->
        <Border Grid.Row="3" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0" 
                Padding="10,10,10,10"
                Margin="0,10,0,0">
            <Grid DataContext="{Binding PageVM}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           VerticalAlignment="Center"
                           Text="{Binding Total, StringFormat='共 {0} 条记录'}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="上一页" 
                            Command="{Binding PageChangedCommand}"
                            CommandParameter="{x:Static sys:Int32.MinValue}"
                            IsEnabled="{Binding CanGoToPreviousPage}"
                            Style="{StaticResource ButtonDashedInfo}"
                            Margin="0,0,10,0"/>

                    <TextBlock VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Text="{Binding PageIndex, StringFormat='第 {0} 页'}"/>
                    <TextBlock VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Text="{Binding TotalPage, StringFormat='共 {0} 页'}"/>

                    <Button Content="下一页" 
                            Command="{Binding PageChangedCommand}"
                            CommandParameter="{x:Static sys:Int32.MaxValue}"
                            IsEnabled="{Binding CanGoToNextPage}"
                            Style="{StaticResource ButtonDashedInfo}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
