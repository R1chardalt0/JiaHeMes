<UserControl x:Class="DeviceManage.Views.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:views="clr-namespace:DeviceManage.Views"
             xmlns:converters="clr-namespace:DeviceManage.Helpers.Converters"
             xmlns:conv="clr-namespace:DeviceManage.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <conv:BooleanToIndexConverter x:Key="BooleanToIndexConverter"/>
        <conv:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="刷新" Command="{Binding LoadRecipesCommand}"
                    Style="{StaticResource ButtonDashedInfo}" Margin="0,0,15,0"/>
            <Button Content="新增" Command="{Binding AddRecipeCommand}"
                    Style="{StaticResource ButtonDashedSuccess}" Margin="0,0,15,0"/>
        </StackPanel>

        <!-- 列表 -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Recipes.Value}"
                  SelectedItem="{Binding SelectedRecipe.Value, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RecipeId}" Width="60"/>
                <DataGridTextColumn Header="配方名称" Binding="{Binding RecipeName}" Width="*"/>
                <DataGridTextColumn Header="版本" Binding="{Binding Version}" Width="80"/>
                <DataGridTemplateColumn Header="状态" Width="80">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Status, Converter={StaticResource BoolToTextConverter}, ConverterParameter='启用|禁用'}"
                                   Foreground="{Binding Status, Converter={StaticResource BooleanToColorConverter}}"
                                   FontWeight="Bold"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
                <DataGridTextColumn Header="描述" Binding="{Binding Remarks}" Width="2*"/>
                <DataGridTemplateColumn Header="操作" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="编辑" Style="{StaticResource ButtonDashedSuccess}" Margin="0,0,10,0"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="删除" Style="{StaticResource ButtonDashedDanger}"
                                        Command="{Binding DataContext.DeleteRecipeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 主弹窗：新增/编辑配方 -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsDialogOpen.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="480" Background="White" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="16" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="新增配方"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing.Value}" Value="True">
                                        <Setter Property="Text" Value="编辑配方"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <StackPanel Grid.Row="1" Margin="0,10,0,10">
                        <Label Content="配方名称:"/>
                        <TextBox Text="{Binding EditingRecipe.Value.RecipeName, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="配方版本:"/>
                        <TextBox Text="{Binding EditingRecipe.Value.Version, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="状态:"/>
                        <ComboBox SelectedIndex="{Binding EditingRecipe.Value.Status, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToIndexConverter}}">
                            <ComboBoxItem Content="禁用"/>
                            <ComboBoxItem Content="启用"/>
                        </ComboBox>
                        <Label Content="描述:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding EditingRecipe.Value.Remarks, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="取消" Command="{Binding CancelCommand}" Style="{StaticResource ButtonDanger}" Margin="0,0,10,0"/>
                        <Button Content="保存" Command="{Binding UpdateRecipeCommand}" Style="{StaticResource ButtonInfo}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
