<UserControl x:Class="DeviceManage.Views.TagView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:DeviceManage.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Reference the converter from the merged dictionary in App.xaml -->
        <StaticResource ResourceKey="TagDetailsConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="刷新" Command="{Binding LoadCommand}" Style="{StaticResource ButtonDashedInfo}" Margin="0,0,15,0"/>
            <Button Content="新增" Command="{Binding AddCommand}" Style="{StaticResource ButtonDashedSuccess}" Margin="0,0,15,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Tags.Value}" SelectedItem="{Binding SelectedTag.Value, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="PlcDeviceId" Binding="{Binding PlcDeviceId}" Width="100"/>
                <DataGridTextColumn Header="点位详情" Binding="{Binding TagDetailDataArray, Converter={StaticResource TagDetailsConverter}}" Width="2*"/>
                <DataGridTextColumn Header="描述" Binding="{Binding Remarks}" Width="*"/>
                <DataGridTemplateColumn Header="操作" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="编辑" Style="{StaticResource ButtonDashedSuccess}" Margin="0,0,10,0"
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="删除" Style="{StaticResource ButtonDashedDanger}"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 弹窗：新增/编辑 Tag -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsDialogOpen.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Width="980" Background="White" CornerRadius="8" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="16" FontWeight="Bold" Grid.Row="0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="新增点位组"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing.Value}" Value="True">
                                        <Setter Property="Text" Value="编辑点位组"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Grid Grid.Row="1" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="PLC设备:"/>
                            <ComboBox ItemsSource="{Binding PlcDevices.Value}" 
                                      DisplayMemberPath="PLCName" 
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding EditingTag.Value.PlcDeviceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Id}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding PLCName}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <Label Content="描述:"/>
                            <TextBox Text="{Binding EditingTag.Value.Remarks, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <!-- TagDetail 表格编辑 -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" ItemsSource="{Binding TagDetailRows.Value}" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="TagName" Binding="{Binding TagName.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="160"/>
                                <DataGridTextColumn Header="Address" Binding="{Binding Address.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="140"/>
                                <DataGridComboBoxColumn Header="DataType" Width="140"
                                                        ItemsSource="{Binding DataContext.DataTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedItemBinding="{Binding DataType.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Unit" Binding="{Binding Unit.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                <DataGridTemplateColumn Header="操作" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="删除" Style="{StaticResource ButtonDashedDanger}"
                                                    Command="{Binding DataContext.RemoveDetailCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1" Content="新增点位明细" Command="{Binding AddDetailCommand}" Style="{StaticResource ButtonDashedSuccess}" Margin="0,10,0,0"/>
                    </Grid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="取消" Command="{Binding CancelCommand}" Style="{StaticResource ButtonDanger}" Margin="0,0,10,0"/>
                        <Button Content="保存" Command="{Binding SaveCommand}" Style="{StaticResource ButtonInfo}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
