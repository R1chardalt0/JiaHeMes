<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate TargetType="Button" x:Key="CornerButton">
        <Border CornerRadius="3" 
                BorderBrush="#E4E4E4" 
                BorderThickness="1" 
                Width="{TemplateBinding Width}"
                Background="{TemplateBinding Background}"
                Height="{TemplateBinding Height}">
            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"
                      HorizontalAlignment="Center" />
        </Border>
    </ControlTemplate>

    <Style TargetType="Button" x:Key="{x:Type Button}">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="27" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#999999" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template" Value="{StaticResource CornerButton}" />
    </Style>

    <Style TargetType="Button" x:Key="BlueBtn" BasedOn="{StaticResource ResourceKey={x:Type Button}}">
        <Setter Property="Background" Value="#4D83FF" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="Button" x:Key="RedBtn" BasedOn="{StaticResource ResourceKey={x:Type Button}}">
        <Setter Property="Background" Value="#FFDADA" />
        <Setter Property="Foreground" Value="#FF4747" />
    </Style>

    <Style TargetType="Button" x:Key="SkyBtn" BasedOn="{StaticResource ResourceKey={x:Type Button}}">
        <Setter Property="Background" Value="#DBE6FF" />
        <Setter Property="Foreground" Value="#4D83FF" />
    </Style>




</ResourceDictionary>