<UserControl x:Class="ChargePadLine.Client.CustomerControl.Toast"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="SuccessStyle" TargetType="Border">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
        </Style>
        <Style x:Key="WarningStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="BorderBrush" Value="#FFA000"/>
        </Style>
        <Style x:Key="ErrorStyle" TargetType="Border">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="ToastGrid" Opacity="0">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard x:Name="FadeInStoryboard">
                        <DoubleAnimation Storyboard.TargetName="ToastGrid" 
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <Border x:Name="ToastBorder" 
                CornerRadius="4" 
                BorderThickness="1" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="IconText" 
                           Grid.Column="0" 
                           FontSize="18" 
                           FontFamily="Arial"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="White"/>
                
                <TextBlock x:Name="MessageText" 
                           Grid.Column="1" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</UserControl> 