               ActiveColor="Red"/>
                        <TextBlock Text="点检响应NG" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <bar:TitleBar IconText="&#xe71c;" TitleText="{Binding 热铆Status, StringFormat='热铆({0})'}"/>

