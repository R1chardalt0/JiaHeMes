<Window x:Class="ChargePadLine.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChargePadLine.Client.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="WMS Client - 仓库管理系统" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="WMS 仓库管理系统客户端" 
                      Style="{StaticResource HeaderText}"
                      Foreground="White"/>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 操作按钮区 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="测试连接" 
                       Command="{Binding TestConnectionCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"
                          FontSize="14"
                          Margin="10,0,0,0"
                          Foreground="#666"/>
            </StackPanel>

            <!-- API响应显示区 -->
            <Border Grid.Row="1" 
                   Style="{StaticResource Card}"
                   Background="{StaticResource BackgroundBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding ApiResponse}" 
                              TextWrapping="Wrap"
                              FontFamily="Consolas"
                              FontSize="12"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" 
               Background="#E0E0E0" 
               Padding="10,5" 
               Margin="0,10,0,0">
            <TextBlock Text="就绪" 
                      FontSize="12"
                      Foreground="#666"/>
        </Border>
    </Grid>
</Window>
