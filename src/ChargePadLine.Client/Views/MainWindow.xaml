<Window x:Class="ChargePadLine.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChargePadLine.Client.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:helpers="clr-namespace:ChargePadLine.Client.Helpers"
        mc:Ignorable="d"
        Title="MES Client - 产线管理系统" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="嘉和MES产线客户端" 
                      Style="{StaticResource HeaderText}"
                      Foreground="White"/>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧监控区 -->
            <local:MonitorView Grid.Column="0" Margin="0,0,5,0"
                               DataContext=""/>

            <!-- 右侧日志区 -->
            <local:LogView Grid.Column="1" Margin="5,0,0,0"
                           DataContext="{Binding LogViewModel}"/>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" 
               Background="#E0E0E0" 
               Padding="10,5" 
               Margin="0,10,0,0">
            <TextBlock Text="就绪" 
                      FontSize="12"
                      Foreground="#666"/>
        </Border>
    </Grid>
</Window>
